<div class="card">
    <div class="card-header">
        <h4 class="font-weight-bold">Update Customer</h4>
    </div>
    <div class="card-body">
        <form action="/updateCustomer/<%= customer._id %>" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="firstname">Recipe Name</label>
                        <input type="text" class="form-control" value="<%= customer.firstname %>" name="firstname" placeholder="enter name of recipe" id="firstname">
                    </div>
                </div>
               
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="phonenumber">Number of Portions</label>
                        <input type="number" class="form-control" value="<%= customer.phonenumber %>" name="phonenumber" placeholder="enter the number of portions this recipe makes" id="phonenumber">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="cnic">Time to complete</label>
                        <input type="text" class="form-control" value="<%= customer.cnic %>" name="cnic" placeholder="enter time to complete" id="cnic">
                    </div>
                </div>
                
            </div>
            <div class="">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="/" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>